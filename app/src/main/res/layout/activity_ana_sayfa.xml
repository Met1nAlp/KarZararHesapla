<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UI.AnaSayfa">

    <!-- Üst Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Özet Rapor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imgProfileBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground" 
            android:background="@drawable/bg_circle_gray"
            android:padding="8dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            app:tint="@color/primary"/>
            <!-- Not: ic_launcher_foreground geçici, profil ikonu varsa o kullanılmalı -->

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Özet Kartları -->
    <LinearLayout
        android:id="@+id/summaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- Kar/Zarar Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardKarZarar"
            style="@style/Widget.Card.Dashboard"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvProfitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net Durum"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tvProfitPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 ₺"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Satış Adedi Kartı -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSales"
            style="@style/Widget.Card.Dashboard"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toplam İşlem"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tvSalesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Hızlı İşlemler Başlığı -->
    <TextView
        android:id="@+id/tvQuickActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hızlı İşlemler"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/summaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Hızlı İşlem Butonları -->
    <HorizontalScrollView
        android:id="@+id/scrollActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvQuickActions"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/cardAddSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İşlem Ekle"
                app:chipIcon="@android:drawable/ic_input_add"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/cardHedefler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hedefler"
                app:chipIcon="@android:drawable/star_on"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/cardAddTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hedef Ekle"
                app:chipIcon="@android:drawable/ic_input_add"
                style="@style/Widget.MaterialComponents.Chip.Action"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Son İşlemler Başlığı -->
    <TextView
        android:id="@+id/tvRecentTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Son İşlemler"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/scrollActions"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

    <!-- İşlem Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIslemler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecentTransactions"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>