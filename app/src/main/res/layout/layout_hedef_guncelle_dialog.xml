<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_card"
    android:padding="28dp">

    <View
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/divider"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="28dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hedef İlerlemesini Güncelle"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:letterSpacing="0.01"/>

            <TextView
                android:id="@+id/tvHedefAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hedef Adı"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTamamlanan"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tamamlanan Miktar"
        app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
        app:startIconTint="@color/primary"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTamamlanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:padding="18dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHedefGuncelle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Güncelle"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        android:backgroundTint="@color/primary"/>

</LinearLayout>

