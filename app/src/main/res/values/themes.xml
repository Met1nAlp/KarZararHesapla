<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KarZararHesapla" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Renkler -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        
        <!-- Tipografi ve Şekiller -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Large</item>
        
        <!-- Durum Çubuğu -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Koyu renk status bar, beyaz ikonlar -->
    </style>

    <style name="Theme.KarZararHesapla" parent="Base.Theme.KarZararHesapla" />
    
    <!-- Şekiller -->
    <style name="ShapeAppearance.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Özel Bileşen Stilleri -->
    <style name="Widget.Card.Dashboard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">4dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Medium</item>
    </style>

</resources>